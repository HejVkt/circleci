{
    "name": "laravel/laravel",
    "description": "The Laravel Framework.",
    "keywords": [
      "framework",
      "laravel"
    ],
    "license": "MIT",
    "type": "project",
    "require": {
      "php": ">=7.1.0",
      "ext-gd": "*",
      "andre_487/php_rutils": "^1.2",
      "barryvdh/laravel-debugbar": "^2.4",
      "barryvdh/laravel-ide-helper": "2.*",
      "c0de8/matchmaker": "*",
      "cocur/slugify": "^2.5",
      "dmore/chrome-mink-driver": "^2.3",
      "doctrine/dbal": "^2.5",
      "fideloper/proxy": "^3.3",
      "guzzlehttp/guzzle": "^6.2",
      "jenssegers/agent": "^2.5",
      "jeremeamia/superclosure": "^2.3",
      "laravel/framework": "5.5.*",
      "laravel/tinker": "~1.0",
      "niklasravnsborg/laravel-pdf": "^1.5",
      "paquettg/php-html-parser": "^1.7",
      "roave/security-advisories": "dev-master",
      "sentry/sentry": "^1.6",
      "sentry/sentry-laravel": "^0.7.0",
      "topface/petrovich-php": "dev-master",
      "webpatser/laravel-uuid": "^3.0",
      "wpb/string-blade-compiler": "^3.5.1",

      "fzaninotto/faker": "~1.4",
      "mockery/mockery": "0.9.*",
      "phpunit/phpunit": "~6"
    },
    "require-dev": {
        "laravel/dusk": "^1.1",
        "filp/whoops": "^2.1"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
          "App\\": "app/",
          "Src\\": "src/",
          "LaravelAutoStruct\\": "packages/LaravelAutoStruct",
          "Bitrix\\": "packages/Bitrix"
        },
        "files": [
          "app/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        },
        "files": ["tests/utilities/functions.php"]
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "extra": {
        "laravel": {
            "dont-discover": [
                "laravel/dusk"
            ]
        }
    },

    "minimum-stability": "dev",
    "prefer-stable": true
}
